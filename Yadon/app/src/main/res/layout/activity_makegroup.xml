<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_centerHorizontal="true"
        android:hint="저녁팟"
        android:ems="10"
        android:id="@+id/groupname" />

    <ImageButton
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/grouplist_confirm"
        android:id="@+id/confirm"
        android:layout_height="40dp"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@+id/groupname"
        android:layout_toRightOf="@+id/groupname"
        android:layout_toEndOf="@+id/groupname" />

    <ListView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm"
        android:id="@+id/list"/>

    <TextView
        android:text="그룹이름"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text4"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_alignBaseline="@+id/groupname"
        android:layout_alignBottom="@+id/groupname"
        android:layout_toLeftOf="@+id/groupname"
        android:layout_toStartOf="@+id/groupname" />

</RelativeLayout>
